<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="singleDownload"
            android:text="单任务程下载APK"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/stopSingleDownloadBtn"
            android:onClick="stopSingleDownload"
            android:text="停止单任务程下载APK"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:onClick="singleDownloadVideo"
            android:text="单任务程下载视频"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
        <Button
            android:onClick="saveByte"
            android:text="保存字节"
            android:layout_width="200dp"
            android:layout_height="100dp"/>
    </LinearLayout>


    <Button
        android:onClick="singleDownloadPic"
        android:text="单任务程下载图片"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <Button
        android:onClick="multiDownload"
        android:text="多任务程下载"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/task1"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/task2"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/task3"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/task4"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="task4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>